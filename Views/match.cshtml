<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}

@if(Model.ContainsKey("message"))
{
  <h3>@Model["message"]</h3>
}
<div class="container">
  <div class="row">
  <div class="col-md-2">
    <img src="@Model["user"].GetProfilePhoto().Url" alt="profile picture" id="profilePic" class="small-picture"/>
    <h4><a href="/user/@Model["user"].Id">My Profile</a></h4>
    <h4><a href="/users">View All Profiles</a></h4>
    <h4><a href="/user/messages">View Messages</a></h4>
    <br>
    <h4 id="log-out-h4"><a href="/logout">Log-Out</a></h4>
  </div>
  <div class="col-md-10 well">
    <h2>@Model["match"].FirstName @Model["match"].LastName</h2>
    <img src="@Model["match"].GetProfilePhoto().Url" alt="profile picture" id="profilePic" class="small-picture"/>
    <h3>@Model["match"].TagLine</h3>
    <h4>@Model["match"].Genders seeking @Model["match"].SeekGenders</h4>
    <h4>username: @Model["match"].UserName</h4>
    <p>about me: @Model["match"].AboutMe</p>
    <h6>zip-code: @Model["match"].ZipCode</h6>
    <h6>email: @Model["match"].Email</h6>
    <br>
    <h4><a href='/user/@Model["match"].Id/photos'>Photos</a></h4>
    <hr>
    <button type="button" name="update" class="btn btn-info"><a href="/user/@Model["match"].Id/message/send">Message @Model["match"].UserName</a></button>
    <hr>
    <a href="/match/@Model["match"].Id/previous">Previous match</a><br>
    <a href="/match/@Model["match"].Id/next">Next match</a>

    </div>
  </div>
</div>
