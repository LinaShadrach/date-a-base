@{
  Layout="Shared/_Layout.cshtml";
}
@if(Model.ContainsKey("message"))
{
  <h3>@Model["message"]</h3>
}
<div class="container">
  <div class="row">
  <div class="col-md-2">
    <img src="@Model["user"].GetProfilePhoto().Url" alt="profile picture" id="profilePic" class="small-picture"/>
    <h4><a href="/user/@Model["user"].Id">My Profile</a></h4>
    <h4><a href="/users">View All Profiles</a></h4>
    <h4><a href="/user/messages">View Messages</a></h4>
    <br>
    <h4 id="log-out-h4"><a href="/logout">Log-Out</a></h4>
  </div>
  <div class="col-md-10">
    <h3>Pictures</h3>
@if(Model["state"] == true)
{
  <form action="/photos/add" method="post">
    <label for="new-photo">Add a photo (URL please!)</label>
    <input type="text" name="new-photo">
    <button type="submit">Add Photo</button>
  </form>
}
<ul>
  @foreach(var photo in Model["photos"])
  {
    <li><a href="/user/@Model["selectedUser"].Id/photo/@photo.Id"><img src="@photo.Url"/></a></li>
  }
</ul>
</div>
</div>
</div>
