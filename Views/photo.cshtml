@{
  Layout="Shared/_Layout.cshtml";
}
<div class="container">
<div class="row">
<div class="col-md-2">
  <img src="@Model["user"].GetProfilePhoto().Url" alt="profile picture" id="profilePic" class="small-picture"/>
  <h4><a href="/user/@Model["user"].Id">My Profile</a></h4>
  <h4><a href="/users">View All Profiles</a></h4>
  <h4><a href="/user/messages">View Messages</a></h4>
  <br>
  <h4 id="log-out-h4"><a href="/logout">Log-Out</a></h4>
</div>
<div class="col-md-10">
<h2>Pictures of @Model["user"].FirstName</h2>
<img src="@Model["photo"].Url" alt="Picture">
<form action="/photo/@Model["photo"].Id/delete" method="post">
  <input type="hidden" name="_method" value="DELETE">

  <button type="sumbit" class="btn btn-danger">Delete photo</button>
</form>
<a class="photo-nav" href="/user/@Model["user"].Id/photo/@Model["photo"].Id/previous">Previous | </a>
<a class="photo-nav" href="/user/@Model["user"].Id/photo/@Model["photo"].Id/next">Next</a>
</div>
</div>
